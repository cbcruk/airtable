{
  "name": "@cbcruk/airtable",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "version": "0.0.9",
  "scripts": {
    "dev": "tsup --format esm,cjs --dts --legacy-output --watch",
    "build": "tsup --format esm,cjs --dts --legacy-output",
    "release": "yarn build && yarn publish --access=public",
    "lint": "TIMING=1 eslint src/**/*.ts* --fix",
    "test": "vitest --ui"
  },
  "devDependencies": {
    "tsconfig": "*",
    "@types/node": "^17.0.30",
    "@vitest/ui": "^0.10.0",
    "happy-dom": "^3.1.0",
    "msw": "^0.39.2",
    "tsup": "^5.12.6",
    "typescript": "^4.6.3",
    "vite": "^2.9.6",
    "vitest": "^0.10.0",
    "eslint": "^7.32.0",
    "eslint-config-custom": "*"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cbcruk/airtable.git"
  }
